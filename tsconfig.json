{
    "extends": "@tsconfig/node16/tsconfig.json",
    "display": "Node 16",
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "module": "commonjs",
        "target": "es2021",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}